<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="splashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash</item>
        <item name="android:navigationBarColor" tools:targetApi="q">@color/blue</item>
        <item name="android:statusBarColor" tools:targetApi="q">@color/blue</item>
        <item name="android:windowLightStatusBar" tools:targetApi="q">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="q">false</item>
        <item name="base_background">@color/blue</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="q">@color/white</item>
        <item name="android:navigationBarColor" tools:targetApi="q">@color/blue</item>
        <item name="android:windowLightStatusBar" tools:targetApi="q">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="q">true</item>
        <item name="base_background">@color/white</item>
        <item name="display_foreground">@color/blue</item>
        <item name="base_text_color">@color/black</item>
        <item name="foreground_text_color">@color/white</item>
        <item name="group_card_color">@color/dull_white</item>
        <item name="group_card_text_color">@color/dark_grey</item>
        <item name="tabular_buttons">@color/lighter_grey</item>
        <item name="heading_text_color">@color/blue</item>
        <item name="action_button_color">@color/deep_blue</item>
        <item name="button_text_color">@color/white</item>
        <item name="action_text_color">@color/blue</item>
        <item name="neutral_button_color">@color/spruce</item>
        <item name="positive_button_color">@color/blue</item>
        <item name="warning_button_color">@color/dark_red</item>
        <item name="secondary_background">@color/dull_blue</item>
    </style>


    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="q">@color/charcoal</item>
        <item name="android:navigationBarColor" tools:targetApi="q">@color/charcoal</item>
        <item name="android:windowLightStatusBar" tools:targetApi="q">false</item>
        <item name="base_background">@color/charcoal</item>
        <item name="display_foreground">@color/spruce</item>
        <item name="base_text_color">@color/dull_white</item>
        <item name="foreground_text_color">@color/dull_white</item>
        <item name="group_card_color">@color/black_overlay</item>
        <item name="group_card_text_color">@color/white</item>
        <item name="tabular_buttons">@color/charcoal</item>
        <item name="heading_text_color">@color/blue</item>
        <item name="action_button_color">@color/dull_blue</item>
        <item name="button_text_color">@color/dull_white</item>
        <item name="action_text_color">@color/blue</item>
        <item name="neutral_button_color">@color/spruce</item>
        <item name="positive_button_color">@color/dark_blue</item>
        <item name="warning_button_color">@color/dark_red</item>
        <item name="secondary_background">@color/dead_blue</item>
    </style>
    <style name="IncognitoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="q">@color/black_overlay</item>
        <item name="android:navigationBarColor" tools:targetApi="q">@color/black_overlay</item>
        <item name="android:windowLightStatusBar" tools:targetApi="q">false</item>
        <item name="base_background">@color/black_overlay</item>
        <item name="display_foreground">@color/black</item>
        <item name="base_text_color">@color/dull_white</item>
        <item name="foreground_text_color">@color/dull_white</item>
        <item name="group_card_color">@color/black_overlay</item>
        <item name="group_card_text_color">@color/white</item>
        <item name="tabular_buttons">@color/charcoal</item>
        <item name="heading_text_color">@color/dull_white</item>
        <item name="action_button_color">@color/charcoal</item>
        <item name="button_text_color">@color/dull_white</item>
        <item name="action_text_color">@color/deep_purple</item>
        <item name="neutral_button_color">@color/spruce</item>
        <item name="positive_button_color">@color/charcoal</item>
        <item name="warning_button_color">@color/black_overlay</item>
        <item name="secondary_background">@color/spruce</item>
    </style>

    <style name="BlueLightTheme" parent="AppTheme">
        <item name="android:statusBarColor" tools:targetApi="q">@color/blue</item>
        <item name="android:navigationBarColor" tools:targetApi="q">@color/blue</item>
        <item name="android:windowLightStatusBar" tools:targetApi="q">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="q">false</item>
    </style>

    <style name="BlueDarkTheme" parent="DarkTheme">
        <item name="android:statusBarColor" tools:targetApi="q">@color/spruce</item>
        <item name="android:navigationBarColor" tools:targetApi="q">@color/spruce</item>
        <item name="android:windowLightStatusBar" tools:targetApi="q">false</item>
    </style>

    <style name="BlueWhiteThemeLight" parent="AppTheme">
        <item name="android:statusBarColor" tools:targetApi="q">@color/white</item>
        <item name="android:navigationBarColor" tools:targetApi="q">@color/blue</item>
        <item name="android:windowLightStatusBar" tools:targetApi="q">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="q">false</item>
    </style>

    <style name="BlueWhiteThemeDark" parent="DarkTheme">
        <item name="android:statusBarColor" tools:targetApi="q">@color/charcoal</item>
        <item name="android:navigationBarColor" tools:targetApi="q">@color/spruce</item>
        <item name="android:windowLightStatusBar" tools:targetApi="q">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="q">false</item>
    </style>

</resources>
