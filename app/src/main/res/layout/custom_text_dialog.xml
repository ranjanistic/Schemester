<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/roundcontainerbox"
    android:backgroundTint="@color/white"
    android:paddingBottom="12dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_dialog_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cred_credview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dialog_text_hint"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_margin="12dp"
            android:layout_height="80dp"
            android:paddingStart="12dp"
            android:hint="Type here"
            android:paddingEnd="12dp"
            android:layout_gravity="center"
            android:textColorHint="@color/dull_white"
            android:padding="4dp">
            <EditText
                android:id="@+id/dialog_text"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_margin="12dp"
                android:layout_height="80dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColorHint="@color/dull_white"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="13dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/text_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@drawable/square_btn"
            android:backgroundTint="@color/blue"
            android:clickable="true"
            android:focusable="true"
            
            android:padding="12dp"
            android:textStyle="bold"
            android:text="Submit"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/text_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/square_btn"
            android:backgroundTint="@color/spruce"
            android:clickable="true"
            android:focusable="true"
            
            android:padding="12dp"
            android:text="Cancel"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>