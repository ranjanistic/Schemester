<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/roundcontainerbox"
    android:backgroundTint="?attr/base_background"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    tools:targetApi="q">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_dialog_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:text=""
            android:textColor="?attr/base_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_text_hint"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:hint="@string/type_here"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColorHint="?attr/display_foreground">

        <EditText
            android:id="@+id/dialog_text"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:focusedByDefault="true"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="?attr/base_text_color"
            android:textColorHint="?attr/display_foreground"
            tools:ignore="LabelFor"
            tools:targetApi="q" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/ValidityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="12dp"
        android:gravity="end"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:text=""
        android:textSize="12sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:padding="13dp">

        <Button
            android:id="@+id/text_submit"
            style="?attr/buttonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@drawable/square_round_btn"
            android:backgroundTint="?attr/positive_button_color"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:text="@string/submit"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="?attr/button_text_color"
            android:textStyle="bold" />

        <Button
            android:id="@+id/text_cancel"
            style="?attr/buttonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/square_round_btn"
            android:backgroundTint="?attr/neutral_button_color"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:text="@string/cancel"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="?attr/button_text_color"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>