<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingTop="28dp"
    android:gravity="end"
    android:paddingBottom="28dp"
    android:background="@android:color/transparent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    tools:showIn="@layout/activity_full_schedule">

    <Button
        android:id="@+id/mon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/leftroundbtn"
        android:textSize="16sp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="22dp"
        android:textColor="?attr/button_text_color"
        android:textAllCaps="false"
        android:text="Mon"/>

    <Button
        android:id="@+id/tue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/leftroundbtn"
        android:paddingStart="4dp"
        android:paddingTop="8dp"
        android:paddingEnd="4dp"
        android:paddingBottom="8dp"
        android:text="Tue"
        android:textAllCaps="false"
        android:textColor="?attr/button_text_color"
        android:textSize="16sp" />
    <Button
        android:id="@+id/wed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/leftroundbtn"
        
        android:textAllCaps="false"
        android:textSize="16sp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="22dp"
        android:textColor="?attr/button_text_color"
        android:text="Wed"/>
    <Button
        android:id="@+id/thu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/leftroundbtn"
        
        android:textSize="16sp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="22dp"
        android:textColor="?attr/button_text_color"
        android:textAllCaps="false"
        android:text="Thu"/>
    <Button
        android:id="@+id/fri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/leftroundbtn"
        
        android:textSize="16sp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="22dp"
        android:textColor="?attr/button_text_color"
        android:textAllCaps="false"
        android:text="Fri"/>
    <ImageButton
        android:id="@+id/settingbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/leftroundbtn"
        android:backgroundTint="@color/dull_blue"
        app:srcCompat="@drawable/ic_settingico_mini" />
    <ImageButton
        android:id="@+id/aboutbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:background="@drawable/leftroundbtn"
        android:backgroundTint="@color/charcoal"
        app:srcCompat="@drawable/ic_infoico" />
</LinearLayout>