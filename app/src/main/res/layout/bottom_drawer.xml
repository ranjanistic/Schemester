<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="?attr/group_card_color"
    android:background="@drawable/toproundview"
    android:layout_width="match_parent"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:layout_height="wrap_content"
    android:id="@+id/bottom_drawer">
    <LinearLayout
        android:id="@+id/drawerarrowHolder"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/drawerarrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:rotation="90"
        android:background="@drawable/ic_halfarrow"
        android:backgroundTint="@color/blue"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fullScheduleTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical"
        android:background="@drawable/square_edgy_btn"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:backgroundTint="@android:color/transparent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:text="View full week schedule"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/group_card_text_color"
            android:foregroundTint="?attr/group_card_text_color"
            android:background="@drawable/ic_menuactionicon"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/settingTab"
        android:layout_width="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/square_edgy_btn"
        android:padding="16dp"
        android:backgroundTint="@android:color/transparent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:text="Settings"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/setting_large"/>
    </LinearLayout>
</LinearLayout>