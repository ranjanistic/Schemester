<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/display_foreground"
    android:backgroundTint="?attr/display_foreground"
    tools:context=".PositionActivity">

    <TextView
        android:id="@+id/definesheading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:alpha="1"
        android:elevation="12dp"
        android:fontFamily="@font/reem_kufi"
        android:gravity="bottom|center"
        android:paddingStart="32dp"
        android:paddingTop="22dp"
        android:paddingEnd="32dp"
        android:paddingBottom="0dp"
        android:text="What \ndefines you \nbetter?"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8">
        <Button
            android:id="@+id/teacherbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/square_round_btn"
            android:backgroundTint="?attr/base_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textAllCaps="false"
            android:textSize="22sp"
            android:textColor="@color/blue"
            android:text="I'm a teacher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/foreground_text_color"
            android:padding="12dp"
            android:textSize="32dp"
            android:text="Or"/>
        <Button
            android:id="@+id/studentbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/square_round_btn"
            android:backgroundTint="?attr/base_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textAllCaps="false"
            android:textSize="22sp"
            android:textColor="@color/blue"
            android:text="I'm a student"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>