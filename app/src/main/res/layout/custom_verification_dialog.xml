<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/roundcontainerbox"
    android:backgroundTint="@color/white"
    android:paddingBottom="12dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/cred_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:text="Verification required"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cred_credview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_margin="12dp"
            android:layout_height="80dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_gravity="center"
            android:padding="4dp">
        <EditText
            android:id="@+id/cred_email"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_margin="12dp"
            android:layout_height="80dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:backgroundTint="@color/blue"
            android:inputType="textEmailAddress"
            android:hint="Email ID"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_margin="12dp"
            android:layout_height="80dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_gravity="center"
            android:padding="4dp">
        <EditText
            android:id="@+id/cred_pass"
            android:textColor="@color/black"
            android:backgroundTint="@color/blue"
            android:layout_width="match_parent"
            android:layout_margin="12dp"
            android:layout_height="80dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:inputType="number"
            android:hint="Date of Birth"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="13dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cred_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@drawable/square_btn"
            android:backgroundTint="@color/dark_red"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:textStyle="bold"
            android:text="Delete my account"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/cred_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/square_btn"
            android:backgroundTint="@color/spruce"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:text="Cancel"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>